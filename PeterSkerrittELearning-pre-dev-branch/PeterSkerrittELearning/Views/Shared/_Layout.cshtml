        @Scripts.Render("~/bundles/sidebar")
        <div class="container body-content">

            @RenderBody()
        </div>
    </div>

    @Styles.Render("~/Content/css")
    @RenderSection("scripts", required: false)

    <script>
        $(window).load(function () {
            $('#LoadingScreen').hide();
        });

        window.onbeforeunload = function () {
            $('#LoadingScreen').show();
        };
