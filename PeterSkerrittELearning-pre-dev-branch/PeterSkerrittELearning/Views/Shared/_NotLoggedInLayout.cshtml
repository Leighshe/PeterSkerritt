<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Peter Skerritt - @ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/core")
    @Styles.Render("~/Content/particles")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>
<body class="login-container" style="background-color: #fff !important; padding-top: 0px;">
    <div id="LoadingScreen" style="width: 100%; height: 100vh; z-index: 999999; position: absolute; top: 0; left: 0; background-color: white;">
        <i class="fa fa-spinner" style="font-size: 44px; margin-left: calc(50% - 22px); margin-top: calc(50vh - 22px); animation: rotation infinite 1s"></i>
    </div>
    <div id="particles-background">
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/core")
    @Scripts.Render("~/bundles/theme")
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    @Scripts.Render("~/bundles/particles")

    @RenderSection("scripts", required: false)

    <script>
        $(window).load(function () {
            $('#LoadingScreen').hide();
        });

        window.onbeforeunload = function () {
            $('#LoadingScreen').show();
        };
    </script>
</body>
</html>