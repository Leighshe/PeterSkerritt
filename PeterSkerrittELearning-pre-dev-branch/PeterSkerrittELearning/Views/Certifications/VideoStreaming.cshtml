@model PeterSkerrittELearning.Models.MediaViewModel

@{
    Layout = null;
}

@using (Html.BeginForm("StreamMedia", "Certifications", FormMethod.Post, new { target = "_blank", @class = "form-horizontal", role = "form" }))
{
    <div class="col-md-12">
        @if (Model.MediaType == "video")
        {
            <video width="100%" height="90%" controls>
                <source src='~/Media/@Model.Name' type="video/@Model.Extension" />
                Your browser does not support the video format.
            </video>
        }
        else
        {
            <audio controls>
                <source src='~/Media/@Model.Name' type="audio/@Model.Extension">
                Your browser does not support the audio element.
            </audio>
        }
    
    </div>
}