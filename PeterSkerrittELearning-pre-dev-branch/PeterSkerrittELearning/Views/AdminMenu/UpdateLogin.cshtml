@model PeterSkerrittELearning.Models.UpdateLoginViewModel

@{
    ViewBag.Title = "Update My Login";
}

@Styles.Render("~/Content/css")
@Styles.Render("~/Content/core")

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")

<style>
    .btn-labeled > b {
        background-color: rgba(80, 80, 80, 0.9)
    }
</style>

<div class="login-container">

    <div class="page-container">

        <!-- Page content -->
        <div class="page-content">

            <!-- Main content -->
            <div class="content-wrapper">

                <!-- Content area -->
                <div class="content">

                    <div class="row">
                        <div class="col-lg-8 col-lg-offset-2">
                            <div class="panel panel-flat">
                                <div class="panel-body">   
                                    @using (Html.BeginForm("UpdateLogin", "AdminMenu", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="panel registration-form" style="border: 1px solid #222222; border-radius: 5px;">
                                                    <div class="panel-body">
                                                        <div class="text-center">
                                                            <div class="icon-object border-success text-success" style="color: #222222 !important; border-color: #222222"><i class="fa fa-user-circle"></i></div>
                                                            <h5 class="content-group-lg">Update login details <small class="display-block">Password fields are optional. All other fields are required.</small></h5>
                                                        </div>
                                                        <div class="form-group has-feedback">
                                                            @Html.Label("First name and last name")
                                                            @Html.TextBoxFor(m => m.FullName, new { @class="form-control", placeholder="Full Name", @readonly = "readonly"})
                                                            <div class="form-control-feedback">
                                                                <i class="icon-user-plus text-muted"></i>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <div class="form-group has-feedback">
                                                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First name" })
                                                                    @*<input type="text" class="form-control" placeholder="First name">*@
                                                                    <div class="form-control-feedback">
                                                                        <i class="icon-user-check text-muted"></i>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="col-md-6">
                                                                <div class="form-group has-feedback">
                                                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last name" })
                                                                    @*<input type="text" class="form-control" placeholder="Last name">*@
                                                                    <div class="form-control-feedback">
                                                                        <i class="icon-user-check text-muted"></i>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <div class="form-group has-feedback">
                                                                    @Html.Label("Username")
                                                                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Username" })
                                                                    <div class="form-control-feedback">
                                                                        <i class="icon-user-check text-muted"></i>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="col-md-6">
                                                                <div class="form-group has-feedback">
                                                                    @Html.Label("Phone number")
                                                                    @Html.TextBoxFor(m => m.Number, new { @class = "form-control", placeholder = "Phone Number" })
                                                                    <div class="form-control-feedback">
                                                                        <i class="icon-user-check text-muted"></i>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="row">
                                                            <div class="col-md-10">
                                                                <div class="form-group has-feedback">
                                                                    @Html.CheckBox("showPasswordFields", false, new { id = "showPasswordFields" })
                                                                    @Html.Label("Click the box to make changes to the password")
                                                                </div>
                                                            </div>

                                                        </div>
                                                        <div id="passwordFields">
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <div class="form-group has-feedback">
                                                                        @Html.Label("Old password")
                                                                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Enter old password" })
                                                                        @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <div class="form-group has-feedback">
                                                                        @Html.Label("New password")
                                                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "New password" })
                                                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                                                        <div class="form-control-feedback">
                                                                            <i class="icon-user-lock text-muted"></i>
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <div class="col-md-6">
                                                                    <div class="form-group has-feedback">
                                                                        @Html.Label("Repeat new password")
                                                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Repeat new password" })
                                                                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                                                        <div class="form-control-feedback">
                                                                            <i class="icon-user-lock text-muted"></i>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <div class="form-group has-feedback">
                                                                    @Html.Label("Email address")
                                                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly" })
                                                                    <div class="form-control-feedback">
                                                                        <i class="icon-mention text-muted"></i>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                                
                                                            </div>
                                                            @Html.ValidationSummary("", new { @class = "text-danger" })
                                                            <div class="text-right">
                                                                <button type="submit" class="btn bg-black-400 btn-labeled btn-labeled-right ml-10"><b><i class="fa fa-user"></i></b> Update Details</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }   
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /content area -->

            </div>
            <!-- /main content -->

        </div>
        <!-- /page content -->

    </div>
    <!-- /page container -->

<script>
    $(document).ready(function () {

        $("#passwordFields").hide();

        $(function () {
            $("#showPasswordFields").click(function () {
                if ($(this).is(':checked')) {
                    $("#passwordFields").show();
                }
                else {
                    $("#passwordFields").hide();
                }
            });
        });
    });
</script>