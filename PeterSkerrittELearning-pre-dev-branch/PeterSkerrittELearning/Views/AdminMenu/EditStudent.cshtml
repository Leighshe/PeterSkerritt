@model PeterSkerrittELearning.Models.EditStudentViewModel

@{
    ViewBag.Title = "Edit Student";
}

@Styles.Render("~/Content/css")
@Styles.Render("~/Content/core")

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")

<style>
    .btn-labeled > b {
        background-color: rgba(80, 80, 80, 0.9)
    }
</style>

<div class="login-container">

    <div class="page-container">

        <!-- Page content -->
        <div class="page-content">

            <!-- Main content -->
            <div class="content-wrapper">

                <!-- Content area -->
                <div class="content">

                    <div class="row">
                        <div class="col-lg-8 col-lg-offset-2">
                            <div class="panel panel-flat">
                                <div class="panel-body">
                                    @using (Html.BeginForm("EditStudent", "AdminMenu", new { Id = Model.Id},FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="panel registration-form"  style="border: 1px solid #222222; border-radius: 5px;">
                                                    <div class="panel-body">
                                                        <div class="text-center">
                                                            <div class="icon-object border-success text-success" style="color: #222222 !important; border-color: #222222"><i class="fa fa-user-circle-o"></i></div>
                                                            <h5 class="content-group-lg">Update student user's details <small class="display-block">Password fields are optional. All other fields are required.</small></h5>
                                                        </div>
                                                        <div class="form-group has-feedback">
                                                            @Html.Label("Username")
                                                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Username" })
                                                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                                                            <div class="form-control-feedback">
                                                                <i class="icon-user-plus text-muted"></i>
                                                            </div>
                                                        </div>

                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <div class="form-group has-feedback">
                                                                    @Html.Label("First Name")
                                                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First name" })
                                                                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                                                                    <div class="form-control-feedback">
                                                                        <i class="icon-user-check text-muted"></i>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="col-md-6">
                                                                <div class="form-group has-feedback">
                                                                    @Html.Label("Last Name")
                                                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last name" })
                                                                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                                                                    <div class="form-control-feedback">
                                                                        <i class="icon-user-check text-muted"></i>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                       <div class="row">
                                                           <div class="col-md-10">
                                                               <div class="form-group has-feedback">
                                                                   @Html.CheckBox("showPasswordFields", false, new { id = "showPasswordFields" })
                                                                   @Html.Label("Click the box to make changes to the password")
                                                               </div>
                                                           </div>
                                                           
                                                       </div>
                                                        <div id="passwordFields">
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <div class="form-group has-feedback">
                                                                        @Html.Label("Old Password")
                                                                        @Html.PasswordFor(m => m.OldPassword, new { type = "Password", @class = "form-control", placeholder = "Enter old password" })
                                                                        @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                                                                        <div class="form-control-feedback">
                                                                            <i class="icon-mention text-muted"></i>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <div class="form-group has-feedback">
                                                                        @Html.Label("New Password")
                                                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "New Password" })
                                                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                                                        <div class="form-control-feedback">
                                                                            <i class="icon-user-lock text-muted"></i>
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <div class="col-md-6">
                                                                    <div class="form-group has-feedback">
                                                                        @Html.Label("Confirm Password")
                                                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm password" })
                                                                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                                                        <div class="form-control-feedback">
                                                                            <i class="icon-user-lock text-muted"></i>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <div class="form-group has-feedback">
                                                                    @Html.Label("Email")
                                                                    @Html.TextBoxFor(m => m.Email, new { type = "Email", @class = "form-control", @readonly = "readonly"})
                                                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                                                    <div class="form-control-feedback">
                                                                        <i class="icon-mention text-muted"></i>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <div class="form-group has-feedback">
                                                                    @Html.Label("Company")
                                                                    @Html.TextBoxFor(m => m.Company, new { @class = "form-control", placeholder = "Company" })
                                                                    @Html.ValidationMessageFor(m => m.Company, "", new { @class = "text-danger" })
                                                                    <div class="form-control-feedback">
                                                                        <i class="icon-mention text-muted"></i>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="col-md-6">
                                                                <div class="form-group has-feedback">
                                                                    @Html.Label("Phone Number")
                                                                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Phone Number" })
                                                                    @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                                                                    <div class="form-control-feedback">
                                                                        <i class="icon-mention text-muted"></i>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <div class="form-group has-feedback">
                                                                    @Html.Label("Report Group")
                                                                    @Html.TextBoxFor(m => m.ReportGroup, new { @class = "form-control", placeholder = "Report Group" })
                                                                    @Html.ValidationMessageFor(m => m.ReportGroup, "", new { @class = "text-danger" })
                                                                    <div class="form-control-feedback">
                                                                        <i class="icon-mention text-muted"></i>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="col-md-6">
                                                                <div class="form-group has-feedback">
                                                                    @Html.Label("Student Category")
                                                                    @Html.TextBoxFor(m => m.StudentCategory, new { @class = "form-control", placeholder = "Student Category" })
                                                                    @Html.ValidationMessageFor(m => m.StudentCategory, "", new { @class = "text-danger" })
                                                                    <div class="form-control-feedback">
                                                                        <i class="icon-mention text-muted"></i>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group has-feedback">
                                                                    @Html.Label("Comments")
                                                                    @Html.TextAreaFor(m => m.Comments, new { @class = "form-control", placeholder = "Comments", rows = "6" })
                                                                    @Html.ValidationMessageFor(m => m.Comments, "", new { @class = "text-danger" })
                                                                    <div class="form-control-feedback">
                                                                        <i class="icon-mention text-muted"></i>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
                                                        <div class="text-right">
                                                            <button type="submit" class="btn bg-black-400 btn-labeled btn-labeled-right ml-10"><b><i class="fa fa-user-plus"></i></b> Update</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        $("#passwordFields").hide();

        $(function () {
            $("#showPasswordFields").click(function () {
                if ($(this).is(':checked')) {
                    $("#passwordFields").show();
                }
                else {
                    $("#passwordFields").hide();
                }
            });
        });
    });
</script>