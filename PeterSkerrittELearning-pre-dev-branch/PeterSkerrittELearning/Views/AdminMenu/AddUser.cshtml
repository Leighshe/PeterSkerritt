@model PeterSkerrittELearning.Models.RegisterViewModel

@{
    ViewBag.Title = "Add User";
}

@Styles.Render("~/Content/css")
@Styles.Render("~/Content/core")

<style>
    .btn-labeled > b {
        background-color: rgba(80, 80, 80, 0.9)
    }
</style>

<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>

<div class="login-container">

    <div class="page-container">

        <!-- Page content -->
        <div class="page-content">

            <!-- Main content -->
            <div class="content-wrapper">

                <!-- Content area -->
                <div class="content">

                        <div class="row">
                            <div class="col-lg-8 col-lg-offset-2">
                                <div class="panel panel-flat">
                                    <div class="panel-body">
                                        <div class="tabbable">
                                            <ul class="nav nav-tabs nav-tabs-highlight nav-justified">
                                                <li class="active"><a href="#highlighted-justified-tab1" data-toggle="tab">Student</a></li>
                                                <li><a href="#highlighted-justified-tab2" data-toggle="tab">Admin</a></li>
                                            </ul>
                                            <div class="tab-content">
                                                <div class="tab-pane active" id="highlighted-justified-tab1">
                                                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        <div class="row">
                                                            <div class="col-lg-12">
                                                                <div class="panel registration-form">
                                                                    <div class="panel-body">
                                                                        <div class="text-center">
                                                                            <div class="icon-object border-success text-success" style="color: #222222 !important; border-color: #222222"><i class="fa fa-user-circle-o"></i></div>
                                                                            <h5 class="content-group-lg">Create a student account <small class="display-block">All fields are required</small></h5>
                                                                        </div>
                                                                        <div class="form-group has-feedback">
                                                                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Username" })
                                                                            @*<input type="text" class="form-control" placeholder="Username">*@
                                                                            <div class="form-control-feedback">
                                                                                <i class="icon-user-plus text-muted"></i>
                                                                            </div>
                                                                        </div>

                                                                        <div class="row">
                                                                            <div class="col-md-6">
                                                                                <div class="form-group has-feedback">
                                                                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First name" })
                                                                                    @*<input type="text" class="form-control" placeholder="First name">*@
                                                                                    <div class="form-control-feedback">
                                                                                        <i class="icon-user-check text-muted"></i>
                                                                                    </div>
                                                                                </div>
                                                                            </div>

                                                                            <div class="col-md-6">
                                                                                <div class="form-group has-feedback">
                                                                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last name" })
                                                                                    @*<input type="text" class="form-control" placeholder="Last name">*@
                                                                                    <div class="form-control-feedback">
                                                                                        <i class="icon-user-check text-muted"></i>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>

                                                                        <div class="row">
                                                                            <div class="col-md-6">
                                                                                <div class="form-group has-feedback">
                                                                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                                                                                    @*<input type="password" class="form-control" placeholder="Create password">*@
                                                                                    <div class="form-control-feedback">
                                                                                        <i class="icon-user-lock text-muted"></i>
                                                                                    </div>
                                                                                </div>
                                                                            </div>

                                                                            <div class="col-md-6">
                                                                                <div class="form-group has-feedback">
                                                                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" , placeholder = "Confirm password" })
                                                                                    @*<input type="password" class="form-control" placeholder="Repeat password">*@
                                                                                    <div class="form-control-feedback">
                                                                                        <i class="icon-user-lock text-muted"></i>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>

                                                                        <div class="row">
                                                                            <div class="col-md-6">
                                                                                <div class="form-group has-feedback">
                                                                                    @Html.TextBoxFor(m => m.Email, new { type = "Email", @class = "form-control", placeholder = "Email" })
                                                                                    @*<input type="email" class="form-control" placeholder="Email">*@
                                                                                    <div class="form-control-feedback">
                                                                                        <i class="icon-mention text-muted"></i>
                                                                                    </div>
                                                                                </div>
                                                                            </div>

                                                                            <div class="col-md-6">
                                                                                <div class="form-group has-feedback">
                                                                                    @Html.TextBoxFor(m => m.ConfirmEmail, new { type = "Email", @class = "form-control", placeholder = "Repeat email" })
                                                                                    @*<input type="email" class="form-control" placeholder="Repeat email">*@
                                                                                    <div class="form-control-feedback">
                                                                                        <i class="icon-mention text-muted"></i>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>

                                                                        <div class="row">
                                                                            <div class="col-md-6">
                                                                                <div class="form-group has-feedback">
                                                                                    @Html.TextBoxFor(m => m.Company, new { @class = "form-control", placeholder = "Company" })
                                                                                    @*<input type="text" class="form-control" placeholder="Company">*@
                                                                                    <div class="form-control-feedback">
                                                                                        <i class="icon-mention text-muted"></i>
                                                                                    </div>
                                                                                </div>
                                                                            </div>

                                                                            <div class="col-md-6">
                                                                                <div class="form-group has-feedback">
                                                                                    @Html.TextBoxFor(m => m.Number, new { @class = "form-control", placeholder = "Number" })
                                                                                    @*<input type="number" class="form-control" placeholder="Number">*@
                                                                                    <div class="form-control-feedback">
                                                                                        <i class="icon-mention text-muted"></i>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <div class="row">
                                                                            <div class="col-md-6">
                                                                                <div class="form-group has-feedback">
                                                                                    @Html.TextBoxFor(m => m.ReportGroup, new { @class = "form-control", placeholder = "Report Group" })
                                                                                    @*<input type="text" class="form-control" placeholder="Report Group">*@
                                                                                    <div class="form-control-feedback">
                                                                                        <i class="icon-mention text-muted"></i>
                                                                                    </div>
                                                                                </div>
                                                                            </div>

                                                                            <div class="col-md-6">
                                                                                <div class="form-group has-feedback">
                                                                                    @Html.TextBoxFor(m => m.StudentCategory, new { @class = "form-control", placeholder = "Student Category" })
                                                                                    <input type="text" class="form-control" placeholder="Student Category">
                                                                                    <div class="form-control-feedback">
                                                                                        <i class="icon-mention text-muted"></i>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <div class="row">
                                                                            <div class="col-md-12">
                                                                                <div class="form-group has-feedback">
                                                                                    @Html.TextAreaFor(m => m.StudentCategory, new { @class = "form-control", placeholder = "Comments", rows = "6" })
                                                                                    @*<textarea type="text" rows="6" class="form-control" placeholder="Comments"></textarea>*@
                                                                                    <div class="form-control-feedback">
                                                                                        <i class="icon-mention text-muted"></i>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        @Html.ValidationSummary("", new { @class = "text-danger" })
                                                                        <div class="text-right">
                                                                            <button type="submit" class="btn bg-black-400 btn-labeled btn-labeled-right ml-10"><b><i class="fa fa-user-plus"></i></b> Create account</button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                                <div class="tab-pane" id="highlighted-justified-tab2">
                                                    <form>
                                                        <div class="row">
                                                            <div class="col-lg-12">
                                                                <div class="panel registration-form">
                                                                    <div class="panel-body">
                                                                        <div class="text-center">
                                                                            <div class="icon-object border-success text-success"  style="color: #222222 !important; border-color: #222222"><i class="fa fa-user-circle"></i></div>
                                                                            <h5 class="content-group-lg">Create an admin account <small class="display-block">All fields are required</small></h5>
                                                                        </div>

                                                                        <div class="row">
                                                                            <div class="col-md-6">
                                                                                <div class="form-group has-feedback">
                                                                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First name" })
                                                                                    @*<input type="text" class="form-control" placeholder="First name">*@
                                                                                    <div class="form-control-feedback">
                                                                                        <i class="icon-user-check text-muted"></i>
                                                                                    </div>
                                                                                </div>
                                                                            </div>

                                                                            <div class="col-md-6">
                                                                                <div class="form-group has-feedback">
                                                                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last name" })
                                                                                    @*<input type="text" class="form-control" placeholder="Last name">*@
                                                                                    <div class="form-control-feedback">
                                                                                        <i class="icon-user-check text-muted"></i>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>

                                                                        @*<div class="form-group has-feedback">
                                                                            <input type="text" class="form-control" placeholder="Fullname">
                                                                            <div class="form-control-feedback">
                                                                                <i class="icon-user-plus text-muted"></i>
                                                                            </div>
                                                                        </div>*@

                                                                        <div class="row">
                                                                            <div class="col-md-6">
                                                                                <div class="form-group has-feedback">
                                                                                    <input type="text" class="form-control" placeholder="Username">
                                                                                    <div class="form-control-feedback">
                                                                                        <i class="icon-user-check text-muted"></i>
                                                                                    </div>
                                                                                </div>
                                                                            </div>

                                                                            <div class="col-md-6">
                                                                                <div class="form-group has-feedback">
                                                                                    <input type="number" class="form-control" placeholder="Number">
                                                                                    <div class="form-control-feedback">
                                                                                        <i class="icon-user-check text-muted"></i>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>

                                                                        <div class="row">
                                                                            <div class="col-md-6">
                                                                                <div class="form-group has-feedback">
                                                                                    <input type="password" class="form-control" placeholder="Create password">
                                                                                    <div class="form-control-feedback">
                                                                                        <i class="icon-user-lock text-muted"></i>
                                                                                    </div>
                                                                                </div>
                                                                            </div>

                                                                            <div class="col-md-6">
                                                                                <div class="form-group has-feedback">
                                                                                    <input type="password" class="form-control" placeholder="Repeat password">
                                                                                    <div class="form-control-feedback">
                                                                                        <i class="icon-user-lock text-muted"></i>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>

                                                                        <div class="row">
                                                                            <div class="col-md-6">
                                                                                <div class="form-group has-feedback">
                                                                                    <input type="email" class="form-control" placeholder="Email">
                                                                                    <div class="form-control-feedback">
                                                                                        <i class="icon-mention text-muted"></i>
                                                                                    </div>
                                                                                </div>
                                                                            </div>

                                                                            <div class="col-md-6">
                                                                                <div class="form-group has-feedback">
                                                                                    <input type="email" class="form-control" placeholder="Repeat email">
                                                                                    <div class="form-control-feedback">
                                                                                        <i class="icon-mention text-muted"></i>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <div class="text-right">
                                                                            <button type="submit" class="btn bg-black-400 btn-labeled btn-labeled-right ml-10"><b><i class="fa fa-user-plus"></i></b> Create account</button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
                <!-- /content area -->
            </div>
            <!-- /main content -->
        </div>
        <!-- /page content -->
    </div>
    <!-- /page container -->
</div>